{
    "apiVersion": "1.2",
    "version": "1.2.0",
    "name": "Ternary Plot",
    "id": "spotfire-mod-ternery-plot",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "showAxisLabels",
            "type": "string",
            "defaultValue": "yes"
        }
    ],
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "dual",
            "allowNonAggregatingMeasures": true,
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "Bottom",
                "mode": "continuous",
                "allowNonAggregatingMeasures": true,
				"placement": "bottom",
				"dropTarget": {
                    "icon": "XAxis3D",
                    "description": "Use {0} on the mod's A-axis"
                }
            },
            {
                "name": "Left",
                "mode": "continuous",
                "allowNonAggregatingMeasures": true,
                "placement": "left",
				"dropTarget": {
                    "icon": "YAxis3D",
                    "description": "Use {0} on the mod's B-axis"
                }
            },
            {
                "name": "Right",
                "mode": "continuous",
                "allowNonAggregatingMeasures": true,
                "placement": "right",
                "dropTarget": {
                    "icon": "ZAxis3D",
                    "description": "Use {0} on the mod's C-axis"
                }            
			},
            {
                "name": "Group By",
                "mode": "categorical",
                "placement": "none",
                "dropTarget": {
                    "icon": "XAxis3D",
                    "description": "Use {0} on the mod's Group-By-axis"
                }            
			}
        ]
    },
    "files": [
        "index.html",
        "main.css",
        "bundle.js"
    ]
}